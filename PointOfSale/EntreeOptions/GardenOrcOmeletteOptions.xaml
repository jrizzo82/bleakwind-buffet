<UserControl x:Class="PointOfSale.EntreeOptions.GardenOrcOmeletteOptions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" TextAlignment="Center">Garden Orc Omelette Options</TextBlock>
        <CheckBox IsChecked ="{Binding Path=Broccoli}" Name="chkbxBroccoli" Grid.Row="1" FontSize="25">Broccoli</CheckBox>
        <CheckBox IsChecked ="{Binding Path=Mushrooms}" Name="chkbxMushrooms" Grid.Row="2" FontSize="25">Mushrooms</CheckBox>
        <CheckBox IsChecked ="{Binding Path=Tomato}" Name="chkbxTomato" Grid.Row="3" FontSize="25">Tomato</CheckBox>
        <CheckBox IsChecked ="{Binding Path=Cheddar}" Name="chkbxCheddar" Grid.Row="4" FontSize="25">Cheddar</CheckBox>
    </Grid>
</UserControl>
